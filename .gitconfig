[core]
	eol = lf
	editor = vim
[user]
	name = Samuel Chen
	email = samuel.chen@akunacapital.com
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	com = checkout master
	fe = fetch origin
	bn = !git for-each-ref --format='%(refname:short)' `git symbolic-ref HEAD`
	rb = rebase
	rbm = rebase master
	pr = !sh -c 'BRANCH_NAME=$(git bn) && git co $0 && git fe && git merge --ff-only origin/$0 && git co $BRANCH_NAME && git rb $0'
	pmr = !git pr master
	df = diff
	who = shortlog -s --
	hr = reset --hard
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	rbc = rebase --continue
	mt = mergetool
	unstage = reset HEAD $1
	stage = add -A
	ff = !sh -c 'BRANCH_NAME=$(git bn) && git merge --ff-only origin/$BRANCH_NAME'
	ec = config --global -e
	up = !git pull --rebase --prune $@ && git submodule update --init --recursive
	cob = checkout -b
	rbi = "!f(){ git rb -i HEAD~${1}; }; f"	
	sub = "!f(){ git checkout $(git branch | fzf); }; f"
	cm = !git add -A && git commit -m
	save = !git add -A && git commit -m 'SAVEPOINT'
	wip = !git add -u && git commit -mWIP
	undo = reset HEAD~1 --mixed
	amend = commit -a --amend
	fam = commit -a --amend --no-edit
	wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	bclean = "!f() { git branch --merged ${1-master} | grep -v ${1-master}$ | xargs -r git branch -d; }; f"
	bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
	p = push origin HEAD
[push]
	default=current
[pull]
    rebase = true
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE